<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/app_red</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>
</resources>