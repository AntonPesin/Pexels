<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_menu">

    <fragment
        android:id="@+id/home_menu"
        android:name="com.projects.pexels_app.ui.fragments.Home"
        android:label="Home"
        tools:layout="@layout/home" >
        <action
            android:id="@+id/action_home_fragment_to_bookmarks_fragment"
            app:destination="@id/bookmarks_menu"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_home_fragment_to_details_fragment"
            app:destination="@id/details_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/bookmarks_menu"
        android:name="com.projects.pexels_app.ui.fragments.Bookmarks"
        android:label="Bookmarks"
        tools:layout="@layout/bookmarks">
        <action
            android:id="@+id/action_bookmarks_fragment_to_home_fragment"
            app:destination="@id/home_menu"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_bookmarks_fragment_to_details_fragment"
            app:destination="@id/details_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/details_fragment"
        android:name="com.projects.pexels_app.ui.fragments.Details"
        android:label="Details"
        tools:layout="@layout/details">
        <action
            android:id="@+id/action_details_fragment_to_home_fragment"
            app:destination="@id/home_menu"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>